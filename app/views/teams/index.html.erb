<p id="notice"><%= notice %></p>

<h1>Times</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Membros</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.students.map{|student| "#{student.name} - #{student.course.name}"}.join(", ") %></td>
        <td>
          <%= link_to 'Show', team %>
          <%= link_to 'Edit', edit_team_path(team) %>
          <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Time', new_team_path %>
